<Window x:Class="Lab4.View.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4.View"
       
        mc:Ignorable="d"
        Title="Добавление" Background="#333" Height="250" Width="300">
  
    <Grid Margin="0,0,0,35">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          
        </Grid.RowDefinitions>
        <TextBox x:Name="NameGood" Text="{Binding NameGood}" Grid.Row="0" Margin="10 15"/>
        <TextBox x:Name="PriceGood" Text="{Binding PriceGood}" Grid.Row="1" Margin="10 15"/>
       
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="Ok" Content="Ok" Width="100" Margin="20 10" Click="Ok_Click" Height="41" />
            <Button x:Name="Cancel" Content="Cancel" Width="100" Margin="20 0" Click="Cancel_Click" Height="41" />
        </StackPanel>
    </Grid>
</Window>
